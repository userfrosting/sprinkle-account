{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "app/assets/**/*.ts",
        "app/assets/**/*.d.ts",
        "app/assets/**/*.vue",
    ],
    "exclude": ["vite.config.ts"],
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
        "baseUrl": ".",
        "rootDir": "app/assets",
        "allowJs": true
    },
    "references": [
        {
            "path": "./tsconfig.node.json"
        }
    ]
}
